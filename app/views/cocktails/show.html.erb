  <div class="container mt-5 bg-info p-5 rounded">
    <h1 class="text-center"><%= @cocktail.name %></h1>

    <h2>Ingredients</h2>

    <ul>
      <% @cocktail.doses.each do |dose|  %>
      <li><%= dose.description %> <%= dose.ingredient.name %> |
      <%= link_to 'âœ— Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
    <% end %>
    </ul>

    <h2>Add an ingredient</h2>

    <%= simple_form_for([@cocktail, @dose]) do |f| %>
      <%=  f.input :description %>
      <%= f.input :ingredient_id, :collection => Ingredient.all %>
      <%= f.submit 'Add this dose', class: 'btn btn-warning'%>

    <% end %>

    <%= link_to("Back to list", root_path, {class: "btn btn-primary"}) %>
  </div>
