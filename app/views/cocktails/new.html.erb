<div class="container text-center mt-5 bg-info p-5 rounded">
  <h1>Create a new Cocktail</h1>

  <%=  form_for(@cocktail) do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div>
      <%= f.submit class: 'btn btn-warning mb-3' %>
    </div>
  <% end %>

  <%= link_to("Back to list", root_path) %>
</div>

