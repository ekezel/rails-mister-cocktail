<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1546171753-97d7676e4602?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1534&q=80')">
    <div class="container text-center">
      <h1>My Cocktails</h1>
      <%= link_to("Create a cocktail", new_cocktail_path, {class: "btn btn-primary btn-lg mt-3"}) %>
    </div>
</div>



  <div class="container mt-3 text-center">
    <div class="cards">
      <% @cocktails.each do |cocktail| %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cocktail.image_url %>)"> <%= link_to cocktail.name, cocktail_path(cocktail) %></div>
      <% end %>
    </div>
  </div>
</div>
